    <link rel="stylesheet" href="./style/home.css" />
    
  </head>
  <body>
    <div
      class="write"
      style="display:flex; gap:15px; align-items:flex-start; margin-top:15px"
    >
      <img
        src="/pics/login_img.webp"
        width="50px"
        style="border-radius:100%; margin-left:8px"
      />
      <form
        action="/home/{{userId}}/create"
        method="POST"
        class="form-group shadow-textarea"
      >
        <textarea
          class="form-control z-depth-1"
          id="exampleFormControlTextarea6 tweetContent"
          rows="3"
          placeholder="What's happening?"
          name="tweetContent"
        ></textarea>
        <hr style="margin: 10px 0px;" />
        <div class="otherOptions">
          <div
            class="fileInput"
            style="width:fit-content; display:flex; align-items:flex-start"
          >
            <img
              src="/pics/media.jpg"
              width="30px"
              style="border-radius:100%; margin-top:2px"
            />
            <img src="/pics/otheroptions.jpg" width="170px" />
            <div class="d-grid gap-2 col-2">
              <button
                type="submit"
                class="btn btn-primary button"
                {{! method="POST" }}
                id="submitDetails"
                value="Tweet"
                style="margin-bottom:10px"
              >Tweet</button>
            </div>
          </div>
        </div>
        {{! <div class="d-grid gap-2 col-2">
              <input
                type="submit"
                class="btn btn-primary button"
                method="POST"
                id="submitDetails"
                value="Tweet"
              />
            </div> }}
      </form>
    </div>
  </body>
