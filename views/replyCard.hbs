<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
    ></script>

    <script src="https://kit.fontawesome.com/f0c462b4bc.js" crossorigin="anonymous"></script>


    <link rel="stylesheet" href="./style/replyCard.css" />
  </head>
  <body>
    <div class="replyCard" style="margin:auto">
      <div
        class="write"
        style="display:flex; gap:1%; align-items:flex-start; margin-top:15px;"
      >
        <img
          src="/pics/login_img.webp"
          width="50px"
          style="border-radius:100%; margin-left:8px"
        />
        <form
          action="/tweet/{{_id}}/reply"
          method="POST"
          class="form-group shadow-textarea"
        >
          <textarea
            class="form-control z-depth-1"
            id="exampleFormControlTextarea6 replyContent"
            rows="3"
            placeholder="What's happening?"
            name="replyContent"
            style="width:300px; height:100px"
          ></textarea>
          <hr style="margin: 10px 0px;" />
          <div class="otherOptions">
            <div
              class="fileInput"
              style="width:fit-content; display:flex; align-items:flex-start"
            >
              <img
                src="/pics/media.jpg"
                width="30px"
                style="border-radius:100%; margin-top:2px"
              />
              <img src="/pics/otheroptions.jpg" width="170px" />
              <div class="d-grid gap-2 col-2">
                <button
                  type="submit"
                  class="btn btn-primary button"
                  {{! method="POST" }}
                  id="submitDetails"
                  value="reply"
                  style="margin-bottom:10px"
                >Reply</button>
              </div>
            </div>
          </div>
          {{! <div class="d-grid gap-2 col-2">
              <input
                type="submit"
                class="btn btn-primary button"
                method="POST"
                id="submitDetails"
                value="Tweet"
              />
            </div> }}
        </form>
      </div>
    </div>
  </body>
</html>