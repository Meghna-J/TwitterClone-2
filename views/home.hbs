<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
      crossorigin="anonymous"
    ></script>
    <script
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
    ></script>

    <script src="https://kit.fontawesome.com/f0c462b4bc.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="./style/home.css" />
    <link rel="stylesheet" href="./style/navstyle.css">
    <link rel="stylesheet" href="./style/footer1.css">
  </head>
  <body>

    <div class="fullPage" style="display:flex; gap:10px">
      {{> nav}}
      <div class="tweetThread">
      <div
        class="newTweetDiv"
        width="500px"
        style="border:1px solid rgb(194, 194, 194)"
      >
        <div class="heading">
          <p
            ckass="headingHome"
            style="font-width:650px;margin:10px 4px; font-weight:640; font-size:20px"
          >Home</p>
        </div>
        <div
          class="write"
          style="display:flex; gap:15px; align-items:flex-start; margin-top:15px"
        >
          <img
            src="./pics/login_img.webp"
            width="50px"
            style="border-radius:100%; margin-left:8px"
          />
          <form action="/home/{{userId}}/create" method="POST" class="form-group shadow-textarea">
            <textarea
              class="form-control z-depth-1"
              id="exampleFormControlTextarea6 tweetContent"
              rows="3"
              placeholder="What's happening?"
              name="tweetContent"
            ></textarea>
            <hr style="margin: 10px 0px;" />
            <div class="otherOptions">
              <div
                class="fileInput"
                style="width:fit-content; display:flex; align-items:flex-start"
              >
                <img
                  src="./pics/media.jpg"
                  width="30px"
                  style="border-radius:100%; margin-top:2px"
                />
                <img src="./pics/otheroptions.jpg" width="170px" />
                <div class="d-grid gap-2 col-2">
                  <button
                    type="submit"
                    class="btn btn-primary button"
                    {{! method="POST" }}
                    id="submitDetails"
                    value="Tweet"
                    style="margin-bottom:10px"
                  >Tweet</button>
                </div>
              </div>
            </div>
            {{! <div class="d-grid gap-2 col-2">
              <input
                type="submit"
                class="btn btn-primary button"
                method="POST"
                id="submitDetails"
                value="Tweet"
              />
            </div> }}
          </form>
        </div>
      </div>
      <div class="ExistingTweets" id="tweet1">
        <div class="blogList">
          <br />
          {{#each tweets as |tweet|}}
            <a href="/tweet/{{tweet._id}}">
            <div class="tweetItems">
              <div class="profileImg" style="margin:10px 0px">
                <img
                  src={{tweet.imgdp}}
                  width="50px"
                  style="border-radius:100%; margin-left:8px"
                />
              </div>
              <div class="Tweetinfo" style="margin:10px 0px; margin-right:50px">
                <div class="tweetUserInfo">
                  <a class="userName" href="/account/{{user._id}}"><b
                    >{{user._id}}</b></a>
                  {{!-- <b>{{tweet.name}}</b> --}}
                  {{user._id}}
                  Â·
                  {{tweet.date}}
                </div>
                <div class="tweetsContent">
                  {{tweet.tweetContent}}
                </div>
              </div>
            </div></a>
          {{/each}}
        </div>
      </div>
      </div>
      {{>footer}}
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
      integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
      crossorigin="anonymous"
    ></script>
  </body>
</html>